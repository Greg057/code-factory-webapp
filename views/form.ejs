<form id="filter-form" action="/" method="GET">
    <div class="filter-bar">
        <div class="filter-by" id="filter-by-interest" data-target="interest-options">
            <h4 class="filter-header">Interest</h4>
            <h6 class="filter-text"><%= interest ? interest : 'All interests'%></h6>
        </div>
        <div class="filter-by" id="filter-by-skillLevel" data-target="skill-options">
            <h4 class="filter-header">Skill Level</h4>
            <h6 class="filter-text"><%= skillLevel ? skillLevel : 'All skill levels'%></h6>
        </div>
        <button type="submit" id="apply-filters-btn">Apply Filters</button>
    </div>

    <!-- Hidden inputs to store selected values -->
    <input type="hidden" name="interest" value="<%= interest %>">
    <input type="hidden" name="skillLevel" value="<%= skillLevel %>">

    <!-- Interest Filter Options -->
    <div class="filter-options" id="interest-options">
        <div class="divider"></div>
        <div class="option" data-value="">All interests</div>
        <div class="option" data-value="Web Development">Web Development</div>
        <div class="option" data-value="Mobile Development">Mobile Development</div>
        <div class="option" data-value="Cybersecurity">Cybersecurity</div>
        <div class="option" data-value="Backend">Backend</div>
        <div class="option" data-value="AI & Machine Learning">AI & Machine Learning</div>
        <div class="option" data-value="Data Science">Data Science</div>
        <div class="option" data-value="Game Development">Game Development</div>
        <div class="option" data-value="DevOps">DevOps</div>
    </div>

    <!-- Skill Level Filter Options -->
    <div class="filter-options" id="skill-options">
        <div class="divider"></div>
        <div class="option" data-value="">All skill levels</div>
        <div class="option" data-value="Beginner">Beginner</div>
        <div class="option" data-value="Intermediate">Intermediate</div>
        <div class="option" data-value="Advanced">Advanced</div>
    </div>
</form>

<script src="/js/form.js" defer></script>