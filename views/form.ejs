
<form id="filter-form" action="/projects" method="GET">
    <!-- Interest Filter -->
    <div>
        <h4>Filter by Interest</h4>
        <label><input type="checkbox" name="interest" value="webdev">Web Development</label>
        <label><input type="checkbox" name="interest" value="mobiledev">Mobile Development</label>
        <label><input type="checkbox" name="interest" value="cybersecurity">Cybersecurity</label>
        <label><input type="checkbox" name="interest" value="backend">Backend</label>
        <label><input type="checkbox" name="interest" value="ai">AI</label>
        <label><input type="checkbox" name="interest" value="scripting">Scripting</label>
        <label><input type="checkbox" name="interest" value="gamedev">Game Development</label>
    </div>
    
    <!-- Skill Level Filter -->
    <div>
        <h4>Filter by Skill Level</h4>
        <select name="skill-level">
        <option value="beginner">Beginner</option>
        <option value="intermediate">Intermediate</option>
        <option value="advanced">Advanced</option>
        </select>
    </div>
    
    <!-- Tech Stack Filter -->
    <div>
        <h4>Filter by Tech Stack</h4>
        <input type="text" name="tech-stack" placeholder="Enter tech stack (e.g., React, Node.js)">
    </div>
    
    <!-- Submit Button -->
    <button type="submit">Apply Filters</button>
</form>
