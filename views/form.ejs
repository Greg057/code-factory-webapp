<form id="filter-form" action="/projects" method="GET">
    <div class="filter-bar">
        <div class="filter-by" id="filter-by-interest" data-target="interest-options">
            <h4 class="filter-header">Interest</h4>
            <h6 class="filter-text">Add interests</h6>
        </div>
        <div class="filter-by" id="filter-by-skill-level" data-target="skill-options">
            <h4 class="filter-header">Skill Level</h4>
            <h6 class="filter-text">Select skill level</h6>
        </div>
        <div class="filter-by" id="filter-by-tech-stack" data-target="tech-options">
            <h4 class="filter-header">Tech Stack</h4>
            <h6 class="filter-text">Add technologies</h6>
        </div>
        <button type="submit">Apply Filters</button>
    </div>

    <!-- Interest Filter Options -->
    <div class="filter-options" id="interest-options">
        <label class="checkbox-label"><input type="checkbox" name="interest" value="webdev">Web Development</label>
        <label class="checkbox-label"><input type="checkbox" name="interest" value="mobiledev">Mobile Development</label>
        <label class="checkbox-label"><input type="checkbox" name="interest" value="cybersecurity">Cybersecurity</label>
        <label class="checkbox-label"><input type="checkbox" name="interest" value="backend">Backend</label>
        <label class="checkbox-label"><input type="checkbox" name="interest" value="ai">AI</label>
        <label class="checkbox-label"><input type="checkbox" name="interest" value="scripting">Scripting</label>
        <label class="checkbox-label"><input type="checkbox" name="interest" value="gamedev">Game Development</label>
    </div>

    <!-- Skill Level Filter Options -->
    <div class="filter-options" id="skill-options">
        <select name="skill-level">
            <option value="beginner">Beginner</option>
            <option value="intermediate">Intermediate</option>
            <option value="advanced">Advanced</option>
        </select>
    </div>

    <!-- Tech Stack Filter Options -->
    <div class="filter-options" id="tech-options">
        <input type="text" id="technologies-input" name="tech-stack" placeholder="Enter tech stack (e.g., React, Node.js)">
    </div>
</form>

<script src="/js/form.js"></script>