<!-- projectDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Project Details</title>
    <link rel="stylesheet" href="/css/projectDetails.css">
</head>
<body>
    <h1><%= project.title %></h1>
    <p><strong>Interest:</strong> <%= project.interest %></p>
    <p><strong>Skill Level:</strong> <%= project.skill_level %></p>
    <p><strong>Description:</strong> <%= project.description %></p>

    <h2>Milestones</h2>    

    <div id="milestoneData" data-milestones='<%- JSON.stringify(milestones) %>'></div>
    <svg id="milestoneTree"></svg> 

    <a href="/">Back to projects</a>

    <script type="module" src="/js/projectDetails.js" defer></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>

</body>
</html>
