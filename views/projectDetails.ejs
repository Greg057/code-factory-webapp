<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Project Details</title>
    <link rel="icon" href="/images/logo.png" type="image/png">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/projectDetails.css">
    <link rel="stylesheet" href="/css/header.css">
</head>
<body>
    <div class="full-page">
        <%- include('header') %>
        <div class="container">
            <header class="project-header">
                <h1 class="project-title"><%= project.title %></h1>
                <div class="project-info">
                    <p class="project-interest"><strong>Interest:</strong> <%= project.interest %></p>
                    <p class="project-skill"><strong>Skill Level:</strong> <%= project.skill_level %></p>
                </div>
                <p class="project-description"><%= project.description %></p>
            </header>

            <section class="milestone-section">
                <h2 class="milestone-title">Milestones</h2>
                <div id="milestoneData" data-milestones='<%- JSON.stringify(milestones) %>'></div>
                <div class="milestone-container">
                    <svg id="milestoneTree"></svg>
                </div>
            </section>
        </div>
    </div>

    <script type="module" src="/js/projectDetails.js" defer></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
</body>
</html>

<!-- Sidebar for displaying milestone details -->
<div id="sidebar" class="sidebar">
    <button id="closeSidebar" class="close-btn">&times;</button>
    <div id="sidebarContent">
        <!-- This will be populated dynamically -->
    </div>
</div>
